<section
  id="inicio"
  class="relative h-[80vh] min-h-[600px] flex items-center justify-center text-white"
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/hero-bg.jpg"
      alt="San Pablo de Pillao"
      class="w-full h-full object-cover"
    />
    <div
      class="absolute inset-0 bg-linear-to-r from-black/80 via-black/50 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl">
      <span
        class="inline-block px-4 py-1 bg-primary/90 text-white text-sm font-bold rounded-full mb-4 animate-fade-in-up"
      >
        BIENVENIDOS A
      </span>
      <h1
        class="text-5xl md:text-7xl font-bold mb-6 leading-tight text-shadow animate-fade-in-up delay-100"
      >
        San Pablo de <span class="text-primary-light">Pillao</span>
      </h1>
      <p
        class="text-xl md:text-2xl text-gray-200 mb-8 leading-relaxed max-w-2xl animate-fade-in-up delay-200"
      >
        Tierra de hortensias, papa nativa y gente trabajadora. Descubre la
        riqueza agrícola y turística de nuestro distrito.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up delay-300">
        <a
          href="#produccion"
          class="px-8 py-4 bg-primary hover:bg-primary-dark text-white font-bold rounded-lg transition-all transform hover:scale-105 shadow-lg text-center"
        >
          Nuestra Producción
        </a>
        <a
          href="#turismo"
          class="px-8 py-4 bg-transparent border-2 border-white hover:bg-white hover:text-primary-dark text-white font-bold rounded-lg transition-all text-center"
        >
          Turismo y Cultura
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Down Indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <a href="#demografia" class="text-white opacity-80 hover:opacity-100">
      <svg
        class="w-10 h-10"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  .delay-100 {
    animation-delay: 100ms;
  }
  .delay-200 {
    animation-delay: 200ms;
  }
  .delay-300 {
    animation-delay: 300ms;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
