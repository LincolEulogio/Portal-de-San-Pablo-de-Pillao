---
import buyers from "../data/buyers.json";
---

<section id="compradores" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary mb-4">
        Directorio de Compradores
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Empresas y organizaciones interesadas en nuestros productos.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        buyers.map((buyer) => (
          <div class="bg-white rounded-xl shadow-md p-6 border-t-4 border-secondary hover:shadow-lg transition-shadow">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-gray-800">{buyer.name}</h3>
                <p class="text-sm text-gray-500">{buyer.address}</p>
              </div>
              <span class="bg-blue-100 text-secondary p-2 rounded-lg">üè¢</span>
            </div>

            <div class="space-y-3 mb-6">
              <div class="flex items-center text-sm">
                <span class="w-24 text-gray-500 font-medium">Contacto:</span>
                <span class="text-gray-800">{buyer.contact}</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="w-24 text-gray-500 font-medium">Demanda:</span>
                <span class="text-gray-800">{buyer.products.join(", ")}</span>
              </div>
              <div class="flex items-center text-sm">
                <span class="w-24 text-gray-500 font-medium">Capacidad:</span>
                <span class="text-gray-800 font-semibold">
                  {buyer.capacity}
                </span>
              </div>
            </div>

            <a
              href={`tel:${buyer.phone.replace(/\D/g, "")}`}
              class="block w-full py-2 border border-secondary text-secondary text-center rounded-lg font-bold hover:bg-secondary hover:text-white transition-colors"
            >
              Llamar: {buyer.phone}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
