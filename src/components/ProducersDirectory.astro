---
import producers from '../data/producers.json';
---

<section id="productores" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary mb-4">Directorio de Productores</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Conecta directamente con nuestros agricultores locales.
      </p>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="px-6 py-2 bg-primary text-white rounded-full hover:bg-primary-dark transition-colors shadow-md">
        Todos
      </button>
      <button class="px-6 py-2 bg-white text-gray-700 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">
        Papa Nativa
      </button>
      <button class="px-6 py-2 bg-white text-gray-700 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">
        Frutas
      </button>
      <button class="px-6 py-2 bg-white text-gray-700 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">
        Flores
      </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {producers.map((producer) => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="h-48 bg-gray-200 relative">
            <div class="absolute inset-0 flex items-center justify-center text-4xl bg-gray-100">
              üë®‚Äçüåæ
            </div>
            <!-- Image placeholder -->
            <!-- <img src={producer.image} alt={producer.name} class="w-full h-full object-cover" /> -->
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-1">{producer.name}</h3>
            <p class="text-sm text-primary font-medium mb-4">üìç {producer.community}</p>
            
            <div class="space-y-3 mb-6">
              <div>
                <p class="text-xs text-gray-500 uppercase font-bold">Productos:</p>
                <div class="flex flex-wrap gap-2 mt-1">
                  {producer.products.map(prod => (
                    <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-md font-medium">
                      {prod}
                    </span>
                  ))}
                </div>
              </div>
              
              <div>
                <p class="text-xs text-gray-500 uppercase font-bold">Volumen:</p>
                <p class="text-sm text-gray-700">{producer.volume}</p>
              </div>
            </div>
            
            <a 
              href={`https://wa.me/${producer.phone.replace(/\D/g, '')}`} 
              target="_blank"
              class="w-full py-2 bg-green-500 text-white text-center rounded-lg font-bold hover:bg-green-600 transition-colors flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
