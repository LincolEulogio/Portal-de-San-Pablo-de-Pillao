---
const products = [
  {
    name: "Papa Nativa",
    volume: "500 Ton/año",
    season: "Mayo - Julio",
    image: "/images/tour-nature.jpg",
    type: "agricola",
  },
  {
    name: "Granadilla",
    volume: "200 Ton/año",
    season: "Todo el año",
    image: "/images/hero-bg.jpg",
    type: "agricola",
  },
  {
    name: "Hortensias",
    volume: "50 mil tallos/año",
    season: "Todo el año",
    image: "/images/handicrafts.jpg",
    type: "agricola",
  },
  {
    name: "Truchas",
    volume: "20 Ton/año",
    season: "Todo el año",
    image: "/images/tour-nature.jpg",
    type: "pecuario",
  },
];
---

<section id="produccion" class="py-16 bg-green-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary mb-4">
        Producción Agropecuaria
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Principales cultivos y productos de nuestra tierra fértil.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        products.map((product) => (
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:-translate-y-1 transition-transform duration-300">
            <div class="h-48 overflow-hidden relative">
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-full object-cover"
              />
              <span
                class={`absolute top-4 right-4 px-3 py-1 rounded-full text-xs font-bold text-white ${product.type === "agricola" ? "bg-green-600" : "bg-blue-600"}`}
              >
                {product.type === "agricola" ? "Agrícola" : "Pecuario"}
              </span>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">
                {product.name}
              </h3>

              <div class="space-y-3">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-500">Volumen:</span>
                  <span class="font-semibold text-primary">
                    {product.volume}
                  </span>
                </div>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-500">Temporada:</span>
                  <span class="font-semibold text-gray-700">
                    {product.season}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Production Chart Placeholder -->
    <div class="mt-12 bg-white p-8 rounded-xl shadow-lg">
      <h3 class="text-xl font-bold text-gray-800 mb-6 text-center">
        Calendario de Cosechas
      </h3>
      <div class="grid grid-cols-12 gap-1 text-xs text-center">
        <div
          class="col-span-12 grid grid-cols-12 gap-1 mb-2 font-bold text-gray-500"
        >
          <div>ENE</div><div>FEB</div><div>MAR</div><div>ABR</div><div>
            MAY
          </div><div>JUN</div>
          <div>JUL</div><div>AGO</div><div>SEP</div><div>OCT</div><div>
            NOV
          </div><div>DIC</div>
        </div>

        <!-- Papa Nativa -->
        <div class="col-span-2 text-left font-semibold text-gray-700">
          Papa Nativa
        </div>
        <div class="col-span-10 grid grid-cols-12 gap-1">
          <div class="col-span-4 bg-gray-100 rounded"></div>
          <div
            class="col-span-3 bg-green-500 rounded text-white flex items-center justify-center"
          >
            Cosecha
          </div>
          <div class="col-span-5 bg-gray-100 rounded"></div>
        </div>

        <!-- Granadilla -->
        <div class="col-span-2 text-left font-semibold text-gray-700 mt-2">
          Granadilla
        </div>
        <div class="col-span-10 grid grid-cols-12 gap-1 mt-2">
          <div
            class="col-span-12 bg-green-400 rounded text-white flex items-center justify-center"
          >
            Producción Continua
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
